<!-- Page Content -->
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Jogos</h1>
            </div>
            <!-- /.col-lg-12 -->
            
        </div>
        <!-- /.row -->
        <div class="panel panel-default">
                        <div class="panel-heading">
                            Jogos
                            <%= link_to new_backoffice_game_path, class:"btn btn-success btn-circle pull-right", style: "margin-top: -5px;" do %>
                                <i class="fa fa-plus"></i>
                            <% end %>
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Descrição</th>
                                            <th>Conquistas</th>
                                            <th>Pontos</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% @games.each do |game| %>
                                        <tr>
                                            <td><%= game.id %></td>
                                            <td>
                                                
                                                <%= link_to backoffice_achievement_path(game) do %>
                                                <%= game.description %>
                                                <% end %>
                                                
                                                
                                            </td>
                                            <td>0/25</td>
                                            <td>0/1950</td>
                                            <td style= "width: 90px">
                                                <%= link_to edit_backoffice_game_path(game), class: "btn btn-primary btn-circle" do %>
                                                    <i class="fa fa-edit"></i>
                                                <% end %>
                                                <%= link_to backoffice_game_path(game), method: :delete, class: "btn btn-danger btn-circle", 
                                                            data: {confirm: "Você realmente deseja excluir o Jogo <b>#{game.description}</b>?"} do %>
                                                    <i class="fa fa-trash-o"></i>
                                                <% end %>
                                            </td>
                                        </tr>
                                        <% end %>
                                    </tbody>
                                </table>
                            </div>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->