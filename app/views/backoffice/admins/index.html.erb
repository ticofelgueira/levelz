
<!-- Page Content -->
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Administradores</h1>
            </div>
            <!-- /.col-lg-12 -->
 </div>
        <!-- /.row -->
        <div class="panel panel-default">
                        <div class="panel-heading">
                            Lista de Administradores
                            
                            <% if policy(@admins).new? %>
                                <%= link_to new_backoffice_admin_path, class:"btn btn-success btn-circle pull-right", style: "margin-top: -5px;" do %>
                                    <i class="fa fa-plus"></i>
                                <% end %>
                            <% end %>
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Nome</th>
                                            <th>E-mail</th>
                                            <th>Tipo de Acesso</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% @admins.each do |admin| %>
                                        <tr>
                                            <td><%= admin.id %></td>
                                            <td><%= admin.name %></td>
                                            <td><%= admin.email %></td>
                                            <td><%= admin.role_i18n %></td>
                                            <td style= "width: 90px">
                                                <%= link_to edit_backoffice_admin_path(admin), class: "btn btn-primary btn-circle" do %>
                                                    <i class="fa fa-edit"></i>
                                                <% end %>
                                                <%= link_to backoffice_admin_path(admin), method: :delete, class: "btn btn-danger btn-circle", 
                                                            data: {confirm: t('messages.confirm_with', item: admin.name)} do %>
                                                    <i class="fa fa-trash-o"></i>
                                                <% end %>
                                            </td>
                                        </tr>
                                        <% end %>
                                    </tbody>
                                </table>
                            </div>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->

